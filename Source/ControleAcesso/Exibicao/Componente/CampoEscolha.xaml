<componente:_ComponenteBase
    x:Class="ControleAcesso.Controle.Componente.CampoEscolha"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:componente="clr-namespace:ControleAcesso.Controle.Componente"
    VerticalOptions="Start">

    <StackLayout
        Margin="{Binding AlinhamentoExterno}"
        BackgroundColor="{Binding FundoCorAtual}"
        HorizontalOptions="FillAndExpand"
        Orientation="{Binding Orientacao}"
        VerticalOptions="Start">

        <componente:Rotulo
            FontSize="{Binding TamanhoTitulo}"
            Text="{Binding Titulo}"
            TextColor="{Binding TituloCor}"
            VerticalOptions="End" />
        <Picker
            x:Name="Picker"
            x:FieldModifier="public"
            Margin="0, -3 ,0, -7"
            IsEnabled="{Binding EntradaHabilitada}"
            ItemsSource="{Binding ListaItensTexto}"
            SelectedIndex="{Binding ItemSelecionadoIndex}"
            FontSize="{Binding TextoTamanho}"
            TextColor="{Binding TextoCorAtual}"
            BackgroundColor="{Binding FundoCorAtual}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start" 
            Focused="Picker_OnFocused"/>
    </StackLayout>
</componente:_ComponenteBase>