[*.cs]

# CA2211: Campos não constantes não devem ser visíveis
dotnet_diagnostic.CA2211.severity = silent

# CA1304: Especificar CultureInfo
dotnet_diagnostic.CA1304.severity = none

# CA2007: Considere chamar ConfigureAwait na tarefa esperada
dotnet_diagnostic.CA2007.severity = warning

# CA2008: Não crie tarefas sem passar um TaskScheduler
dotnet_diagnostic.CA2008.severity = suggestion

# CA1717: Apenas enumerações FlagsAttribute devem ter nomes no plural
dotnet_diagnostic.CA1717.severity = none

# CA1305: Especificar IFormatProvider
dotnet_diagnostic.CA1305.severity = none

# CA1031: Não capturar exceptions de tipos genéricos
dotnet_diagnostic.CA1031.severity = none

# CA1303: Não passar literais como parâmetros localizados
dotnet_diagnostic.CA1303.severity = none

# CA1707: Identificadores não devem conter sublinhados
dotnet_diagnostic.CA1707.severity = none

# IDE1006: Estilos de Nomenclatura
dotnet_diagnostic.IDE1006.severity = none

# CA2227: As propriedades de coleção devem ser somente leitura
dotnet_diagnostic.CA2227.severity = suggestion

# CA1056: As propriedades do URI não devem ser cadeias de caracteres
dotnet_diagnostic.CA1056.severity = none

# CA1307: Especificar StringComparison
dotnet_diagnostic.CA1307.severity = none

# IDE0039: Usar função local
csharp_style_pattern_local_over_anonymous_function = true:none

# IDE0066: Converter a instrução switch em expressão
csharp_style_prefer_switch_expression = true:none

# CA1720: O identificador contém o nome de tipo
dotnet_diagnostic.CA1720.severity = none

# IDE0055: Corrigir a formatação
dotnet_diagnostic.IDE0055.severity = none

# CA2241: Fornecer os argumentos corretos para métodos de formatação
dotnet_diagnostic.CA2241.severity = none

# CA1822: Marcar membros como estáticos
dotnet_diagnostic.CA1822.severity = none

# IDE0005: O uso da diretiva é desnecessário.
dotnet_diagnostic.IDE0005.severity = warning

# CA2234: Passar objetos do URI do sistema em vez de cadeias de caracteres
dotnet_diagnostic.CA2234.severity = none

# IDE0058: O valor da expressão nunca é usado
csharp_style_unused_value_expression_statement_preference = discard_variable:none
